{
  "name": "monorepo",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "check-types": "turbo run check-types",
    "ci:packages:deps": "bun i --filter=\"./packages/*\"",
    "ci:packages:build": "bun run packages:build",
    "ci:packages:rollup": "bun run ci:packages:deps && bun run ci:packages:build",
    "packages:build": "turbo run build --filter=\"./packages/*\""
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "devDependencies": {
    "turbo": "latest"
  },
  "packageManager": "bun@1.1.28",
  "dependencies": {
    "@changesets/cli": "^2.27.9"
  }
}
